{
    "manifest_version": 3,
    "name": "Productivity DashBoard",
    "description": "Track Usage, block websites and use Pomodoro time",
    "version": "1.0",
    "permissions": [
        "storage",
        "notifications",
        "activeTab",
        "tabs",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background":{
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup/popup.html",
        "default_title": "Productivity Dashboard"
    },
    "icons":{
        "128": "asset/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}